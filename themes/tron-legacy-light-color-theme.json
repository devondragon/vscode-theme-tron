{
    "name": "Tron Legacy Light",
    "type": "light",
    "colors": {
        "editor.background": "#e5f2f7",
        "editor.foreground": "#094857",
        "activityBar.border": "#00F6FF",
        "activityBar.foreground": "#00F6FF",
        "activityBarBadge.background": "#00BFFF",
        "sideBarTitle.foreground": "#094857",
        "titleBar.activeBackground": "#E8F1F5",
        "statusBar.background": "#CCE3ED",
        "statusBar.foreground": "#003F54",
        "statusBar.border": "#0085A1",
        "terminal.background": "#F5F9FC",
        "terminal.foreground": "#094857"
    },
    "tokenColors": [
        {
            "name": "Comments",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#5A7B8C"
            }
        },
        {
            "name": "Variables",
            "scope": [
                "variable",
                "string constant.other.placeholder"
            ],
            "settings": {
                "foreground": "#006C84"
            }
        },
        {
            "name": "Import Keywords",
            "scope": [
                "keyword.other.import.java"
            ],
            "settings": {
                "foreground": "#004E8A"
            }
        },
        {
            "name": "Keywords",
            "scope": [
                "keyword",
                "storage.type",
                "storage.modifier"
            ],
            "settings": {
                "foreground": "#00A1C1"
            }
        },
        {
            "name": "Functions",
            "scope": [
                "entity.name.function",
                "meta.function-call"
            ],
            "settings": {
                "foreground": "#005F73"
            }
        },
        {
            "name": "Strings",
            "scope": [
                "string",
                "string.quoted.double.json"
            ],
            "settings": {
                "foreground": "#0076A3"
            }
        },
        {
            "name": "Numbers",
            "scope": [
                "constant.numeric"
            ],
            "settings": {
                "foreground": "#F7931E"
            }
        },
        {
            "name": "Class names",
            "scope": [
                "entity.name.type",
                "entity.name.class"
            ],
            "settings": {
                "foreground": "#004E8A",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Parameters",
            "scope": [
                "variable.parameter"
            ],
            "settings": {
                "foreground": "#006D8F"
            }
        }
    ]
}
